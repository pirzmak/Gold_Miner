<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/levelmenu"
    tools:context="com.example.ja.goldminer.Main2Activity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp">
    <Button
        android:onClick="startLevel1"
        android:id="@+id/level1"
        android:layout_row="0"
        android:layout_column="0"
        android:background="@drawable/lock"
        android:textSize="25dp"
        android:layout_width="120dp"
        android:layout_height="120dp"/>

    <Button
        android:onClick="startLevel2"
        android:id="@+id/level2"
        android:layout_row="0"
        android:layout_column="1"
        android:background="@drawable/lock"
        android:layout_width="120dp"
        android:layout_height="120dp"/>

    <Button
        android:onClick="startLevel3"
        android:id="@+id/level3"
        android:layout_row="0"
        android:layout_column="2"
        android:background="@drawable/lock"
        android:layout_width="120dp"
        android:layout_height="120dp"/>

    <Button
        android:onClick="startLevel4"
        android:id="@+id/level4"
        android:layout_row="1"
        android:layout_column="0"
        android:background="@drawable/lock"
        android:layout_width="120dp"
        android:layout_height="120dp"/>

    <Button
        android:onClick="startLevel5"
        android:id="@+id/level5"
        android:layout_row="1"
        android:layout_column="1"
        android:background="@drawable/lock"
        android:layout_width="120dp"
        android:layout_height="120dp"/>

    <Button
        android:onClick="startLevel6"
        android:id="@+id/level6"
        android:layout_row="1"
        android:layout_column="2"
        android:background="@drawable/lock"
        android:layout_width="120dp"
        android:layout_height="120dp"/>

    <Button
        android:onClick="startLevel7"
        android:id="@+id/level7"
        android:layout_row="2"
        android:layout_column="0"
        android:background="@drawable/lock"
        android:layout_width="120dp"
        android:layout_height="120dp"/>

    <Button
        android:onClick="startLevel8"
        android:id="@+id/level8"
        android:layout_row="2"
        android:layout_column="1"
        android:background="@drawable/lock"
        android:layout_width="120dp"
        android:layout_height="120dp"/>

    <Button
        android:onClick="startLevel9"
        android:id="@+id/level9"
        android:layout_row="2"
        android:layout_column="2"
        android:background="@drawable/lock"
        android:layout_width="120dp"
        android:layout_height="120dp"/>
    </GridLayout>
</RelativeLayout>
